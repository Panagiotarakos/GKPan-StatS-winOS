<Window x:Class="GKPanStats.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About GKPanStats" Width="350" Height="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="Resources/app.ico" Width="80" Height="80" Margin="0,0,0,16"/>

            <TextBlock Text="GKPanStats" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>

            <TextBlock x:Name="VersionText" FontSize="13" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,0,0,4"/>

            <TextBlock x:Name="MonitorText" FontSize="13" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,0,0,16"/>

            <Separator Width="200" Margin="0,0,0,16"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <TextBlock x:Name="CreatedByText" FontSize="13" Margin="0,0,4,0"/>
                <TextBlock>
                    <Hyperlink NavigateUri="https://panagiotarakos.com" RequestNavigate="Hyperlink_Click">
                        PanagiotarakoS
                    </Hyperlink>
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <TextBlock FontSize="13">
                    <Hyperlink NavigateUri="https://pngs.gr" RequestNavigate="Hyperlink_Click">
                        pngs.gr
                    </Hyperlink>
                </TextBlock>
                <TextBlock Text="  |  " Foreground="Gray" FontSize="13"/>
                <TextBlock FontSize="13">
                    <Hyperlink NavigateUri="https://rdev.gr" RequestNavigate="Hyperlink_Click">
                        rdev.gr
                    </Hyperlink>
                </TextBlock>
            </StackPanel>

            <TextBlock HorizontalAlignment="Center" FontSize="13" Margin="0,0,0,8">
                <Hyperlink NavigateUri="https://github.com/Panagiotarakos/GKPan-StatS-Windows" RequestNavigate="Hyperlink_Click">
                    GitHub
                </Hyperlink>
            </TextBlock>

            <TextBlock Text="MIT License" FontSize="11" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Window>
